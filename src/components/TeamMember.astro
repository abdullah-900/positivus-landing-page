---
import linkedIn from "../assets/linkedin social.svg?url"
const {pic,name,position,experience}=Astro.props
---

<div class="flex flex-col gap-7 xl:min-h-[400px] rounded-[45px] w-[90%] md:w-[60%] xl:w-full  m-auto px-7 py-10 border border-primary shadow-base">
    <div class="flex items-end h-[90px] md:h-auto gap-4">
        <img class=" w-[50px] h-[50px] lg:w-[97px] lg:h-[97px]" src={pic} alt="john pic">
        <div class="flex flex-col">
            <h4>{name}</h4>
            <p>{position}</p>
        </div >
        <a class="self-start ml-auto" href="https://www.linkedin.com/">
        <img class="w-[34px] h-[34px]"  src={linkedIn} alt="linkedIn social">
        </a>
    </div>
<hr>
<p>{experience}</p>
</div>